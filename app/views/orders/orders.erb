<!--%binding.pry%-->
<h2>Welcome, <%= current_user.username %>!</h2>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<br></br>
<table style="width:75%">
  <tr>
  <th>Order ID</th>
  <th>Edit Link</th>
  <th>Input Name</th>
  <th>User_ID</th>
  <th>Order's Task</th>
  <th>Order's Site</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
    <td><%=  order.id %></td>
    <td><a href="/orders/<%= order.id %>/edit">"edit"</a></td>
    <td><%=  order.counter %></td>
    <td><%=  order.user_id %></td>
    <td><%=  order.task.task %></td>
    <td><%=  order.site.site %></td>
   </tr> 
  <% end %>
</table>
<br></br>
<p><a href="/orders/new">Create New Work Order</a></p>
<p><a href="/logout">Log Out</a></p>

